{{#partial "content"}}

    <div class="card" style="min-width: 550px; margin-bottom: 20px">
        <div class="card-body">
            <p class="card-text">
                This weeks sightings
            </p>
        </div>
    </div>

    <hr>

    {{#if allEndangeredAnimals}}
        <div class="card" style="min-width: 550px; margin-bottom: 20px">
            <div class="card-body">
                <p class="card-text">
                    Endangered Animal Sightings
                </p>
            </div>
        </div>
        {{#each allEndangeredAnimals}}
            <div class="card sightings-card" style="max-width: 550px; margin-bottom: 20px">
                <div class="card-header">
                    <p class="card-text">{{ name }}</p>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Age:{{ age }}</li>
                        <li class="list-group-item">Health: {{ health }}</li>
                    </ul>
                </div>
                <div class="card-footer">
                    <a href="/sighting/{{ id }}" class="btn btn-light">Details</a>
                </div>
            </div>
        {{/each }}
    {{else }}
        <div class="card" style="min-width: 550px; margin-bottom: 20px">
            <div class="card-body">
                <p class="card-text">
                    No sightings of endangered animals found
                </p>
            </div>
        </div>
    {{/if }}

    <hr>
    {{#if allCommonAnimals}}
        <div class="card" style="min-width: 550px; margin-bottom: 20px">
            <div class="card-body">
                <p class="card-text">
                    Common wildlife Sightings
                </p>
            </div>
        </div>
        {{#each allCommonAnimals}}
            <div class="card sightings-card" style="max-width: 550px; margin-bottom: 20px">
                <div class="card-header">
                </div>
                <div class="card-body">
                    <p class="card-text">{{ name }}</p>
                </div>
                <div class="card-footer">
                    <a href="/sighting/{{ id }}" class="btn btn-secondary">Details</a>
                </div>
            </div>
        {{/each }}
    {{else }}
        <div class="card" style="min-width: 550px; margin-bottom: 20px">
            <div class="card-body">
                <p class="card-text">
                    No sightings of endangered animals found
                </p>
            </div>
        </div>
    {{/if }}


{{/partial}}

